	-- Remove this function if not needed
end

function on_message(self, message_id, message, sender)
	if message_id == hash("change_type") then
		if self.tile_type == hash("green") then
			msg.post("#sprite", "play_animation", { id = hash("test_hex_wood") })
			change_tile(self, hash("wood"), message.x, message.y)
		elseif self.tile_type == hash("wood") then
			msg.post("#sprite", "play_animation", { id = hash("test_hex_blue") })
			change_tile(self, hash("blue"), message.x, message.y)
		else 
			msg.post("#sprite", "play_animation", { id = hash("test_hex_green") })
			change_tile(self, hash("green"), message.x, message.y)
		end
	elseif message_id == hash("go_dark") then
		msg.post("#sprite", "play_animation", { id = hash("hex_test") })
	elseif message_id == hash("go_light") then
		if self.tile_type == hash("green") then
			msg.post("#sprite", "play_animation", { id = hash("test_hex_green") })
		elseif self.tile_type == hash("wood") then
			msg.post("#sprite", "play_animation", { id = hash("test_hex_wood") })
		else 
			msg.post("#sprite", "play_animation", { id = hash("test_hex_blue") })
		end
	end	
end

