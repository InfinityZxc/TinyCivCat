go.property("tile_type", hash("none"))

local tile_types = {
	[hash("green")] = "green",
	[hash("blue")] = "blue",
	[hash("wood")] = "wood"
}

function change_tile(self, type, x, y)
	msg.post("/game#board", "update_tile", {new_type = type, old_type = self.tile_type, x = x, y = y})
	self.tile_type = type
end

function init(self)
	local type = tile_types[self.tile_type]
	msg.post("#sprite", "play_animation", { id = hash("test_hex_" .. type) })
end

